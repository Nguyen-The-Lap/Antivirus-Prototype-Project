@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
  }

  body {
    @apply bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen;
  }

  h1 {
    @apply text-4xl font-bold;
  }

  button {
    @apply px-4 py-2 rounded-md border border-transparent text-sm font-medium;
  }
}
